{
  "rules": {
    "pathways": {
      ".read": true,
      "$pathway": {
        ".read": true,
        ".write": "(!data.exists() && auth!=null) || (data.exists() && data.child('userId').val() === auth.uid)",
        ".validate": "newData.hasChildren(['userId', 'title', 'description', 'WPId', 'timestamp', 'reversedTimestamp'])",
        "title": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length < 30"
        },
        "WPId": {
          ".validate": "newData.isNumber() && newData.val() > 0"
        },
        "description": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "createdAt": {
          ".validate": "newData.isNumber() && newData.val().length => 0"
        },
        "reversedCreatedAt": {
          ".validate": "newData.isNumber && newData.val().length <= 0"
        },
        ".indexOn": "reversedCreatedAt"
      }
    }
  }
}
